{
	"compilerOptions": {
		"rootDir": "./src",

		// Enable latest features
		"lib": ["esnext"],
		"target": "esnext",
		"module": "nodenext",
		"allowJs": true,

		// Bundler mode
		"esModuleInterop": true,
		"resolveJsonModule": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true,

		"outDir": "dist",
		"declaration": true
	},
	"exclude": [
		"tests/",
		"dist/",
		"node_modules/",
		"eslint.config.mjs",
		"babel.config.js"
	]
}
