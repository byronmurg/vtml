{
  "compilerOptions": {
    // Enable latest features
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,

    // Bundler mode
	"esModuleInterop": true,
	"resolveJsonModule": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

	"outDir": "build/"
  }
}
